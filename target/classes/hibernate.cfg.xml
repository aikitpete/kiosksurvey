<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">analytics</property>
        <property name="hibernate.connection.password">danilo</property>
        <property name="hibernate.connection.url">jdbc:mysql://www.petegerhat.com:3306/kiosksurvey</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="show_sql">true</property>
        <property name="connection.pool_size">1</property>

        <mapping resource="Records.hbm.xml"></mapping>
        <mapping resource="Participants.hbm.xml"></mapping>

    </session-factory>
</hibernate-configuration>